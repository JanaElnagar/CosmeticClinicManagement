@page
@model CosmeticClinicManagement.Pages.TreatmentPlan.IndexModel
@using CosmeticClinicManagement.Domain.ClinicManagement
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Treatment Plans";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Treatment Plans</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Doctor Name</th>
                            <th>Patient Name</th>
                            <th>Patient Age</th>
                            <th>Total Sessions</th>
                            <th>Status</th>
                            <th>Created Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.TreatmentPlans != null && Model.TreatmentPlans.Any())
                        {
                            @foreach (var plan in Model.TreatmentPlans)
                            {
                                <tr>
                                    <td>@plan.DoctorName</td>
                                    <td>@plan.PatientFullName</td>
                                    <td>@plan.PatientAge</td>
                                    <td>@plan.TotalSessions</td>
                                    <td>
                                        <span class="badge bg-@GetStatusBadgeClass(plan.Status)">
                                            @plan.Status
                                        </span>
                                    </td>
                                    <td>@plan.CreatedDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a asp-page="./Details" asp-route-id="@plan.Id" class="btn btn-sm btn-primary">
                                            <i class="fa fa-eye"></i> Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">No treatment plans found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetStatusBadgeClass(TreatmentPlanStatus status)
    {
        return status switch
        {
            TreatmentPlanStatus.Ongoing => "info",
            TreatmentPlanStatus.Closed => "success",
            _ => "secondary"
        };
    }
}